{
    "files.exclude": {
        ".git/": true,
        "node_modules/": true,
        "public/": true,
        "temp/": true
    },
    "search.exclude": {
        "**/.cache": true,
        "**/node_modules": true,
        "**/public": true
    },
    "editor.rulers": [80],
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.defaultFormatter": "GitHub.copilot"
    },
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "eslint.validate": ["react", "html", "javascript"],
    "editor.defaultFormatter": "GitHub.copilot"
}
